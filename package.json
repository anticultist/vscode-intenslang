{
  "name": "intens-lang",
  "displayName": "INTENS Language",
  "description": "Unofficial syntax definition for the INTENS language",
  "license": "ISC",
  "version": "0.3.0",
  "publisher": "anticultist",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/anticultist/vscode-intenslang"
  },
  "engines": {
    "vscode": "^1.45.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:intens"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "intens",
        "aliases": [
          "INTENS",
          "intens"
        ],
        "extensions": [
          ".des",
          ".inc",
          ".des.in",
          ".inc.in"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "intens",
        "scopeName": "source.intens",
        "path": "./syntaxes/intens.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "INTENS",
      "properties": {
        "intensLanguageServer.showProblems": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "description": "Show problems detected by the INTENS language server. (experimental - at the moment more a debugging feature for the LSP itself)"
        },
        "intensLanguageServer.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "intensLanguageServer.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "verbose",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run webpack",
    "webpack": "npm run clean && webpack --mode production --config ./client/webpack.config.js && webpack --mode production --config ./server/webpack.config.js && npm run copy-tree-sitter",
    "webpack:dev": "npm run clean && webpack --mode none --config ./client/webpack.config.js && webpack --mode none --config ./server/webpack.config.js && npm run copy-tree-sitter",
    "copy-tree-sitter": "copyfiles -f ./server/node_modules/web-tree-sitter/*.wasm ./server/out",
    "compile": "tsc -b",
    "compile:client": "tsc -b ./client/tsconfig.json",
    "compile:server": "tsc -b ./server/tsconfig.json",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "clean": "rimraf client/out && rimraf server/out",
    "test": "cd client && npm test"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/mocha": "9.1.1",
    "@types/node": "17.0.42",
    "@typescript-eslint/parser": "5.28.0",
    "copyfiles": "2.4.1",
    "eslint": "8.17.0",
    "merge-options": "3.0.4",
    "mocha": "10.0.0",
    "rimraf": "3.0.2",
    "ts-loader": "9.3.0",
    "typescript": "4.7.3",
    "vscode-tmgrammar-test": "0.1.1",
    "webpack": "5.76.0",
    "webpack-cli": "4.10.0"
  }
}
